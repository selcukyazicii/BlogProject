@model Entity.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazar Profil Düzenleme Sayfası</h1>
@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Düzenleme</h4>
                @Html.HiddenFor(x => x.WriterId, new { @class = "form-control" })
                @Html.HiddenFor(x => x.WriterPassword, new { @class = "form-control" })
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Adı Soyadı</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })

                    </div>
                    @*<div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.WriterPassword)
                    </div>*@
                    <div class="form-group">
                        <label>Resim Seç</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x => x.WriterAbout, 10, 4, new { @class = "form-control" })

                    </div>
                    @*<button type="submit" class="btn btn-gradient-primary mr-2">Submit</button>*@
                    <button class="btn btn-primary">Güncelle</button>

                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>

}

