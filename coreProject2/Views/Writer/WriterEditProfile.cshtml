@model UserUpdateVM
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazar Profil Düzenleme Sayfası</h1>

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Düzenleme</h4>
                @*@Html.HiddenFor(x => x.PasswordHash, new { @class = "form-control" })*@
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <input type="text" asp-for="@Model.namesurname" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Email address</label>
                    @Html.TextBoxFor(x => x.mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Password</label>
                    <input type="password" asp-for="@Model.password" class="form-control" />
                </div>
                <div class="form-check">
                    <input type="checkbox" id="flexCheckChecked" asp-for="@Model.changepassword">
                    <label for="flexCheckChecked">
                        Şifremi Değiştirmek İstiyorum
                    </label>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Kullanıcı Adı</label>
                    <input type="text" asp-for="@Model.username" class="form-control" />
                </div>
                <div>
                    <label for="exampleInputPassword4">Resim Yolu</label>
                    <input type="text" asp-for="@Model.imageurl" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    @*@Html.TextAreaFor(x => x.WriterAbout, 10, 4, new { @class = "form-control" })*@
                </div>
                <button class="btn btn-primary">Güncelle</button>
                <button class="btn btn-light">Cancel</button>
            </form>
            </div>
        </div>
    </div>
