@using Entity
@model List<BlogListesiVM>
@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Oluşturma</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.blogId</td>
            <td>@item.Title</td>
            <td>@(((DateTime)item.CreateDate).ToString("dd-MMM-yyyy"))</td>
            <td>@item.Category</td>
            <td>@item.blogStatus</td>
            <td><a href="/Blog/DeleteBlog/@item.blogId" data-id="@item.blogId" class="btn btn-danger adressil">Sil</a></td>
            <td><a href="/Blog/Edit/@item.blogId" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Blog/AddBlog" class="btn btn-info">Yeni Blog Oluştur</a>

