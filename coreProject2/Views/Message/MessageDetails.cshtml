@model Entity.Concrete.Message2

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>
    @Html.Label("Mesaj ID")
    @Html.TextBoxFor(x => x.MessageId, new { @class = "form-control" })

    @Html.Label("Mesaj Başlığı")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesaj çerik")
    @Html.TextBoxFor(x => x.MessageDetails, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Mesajlara Dön</button>


