@model UserRegisterVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/adminpage/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/adminpage/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/adminpage/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/adminpage/css/animate.css" rel="stylesheet">
    <link href="~/adminpage/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">.net</h1>

            </div>
            <h3>Kayıt Ol</h3>
            <p>Yeni bir hesap oluşturun.</p>
            <form class="m-t" role="form" asp-controller="RegisterUser" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Ad Soyad" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Mail" placeholder="Email" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="UserName" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Password" required="">
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
                </div>



                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i>Kullanım Şartlarını Okudum </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Register</button>


                <p class="text-muted text-center"><small>Already have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="#">Login</a>

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            </form>
            <p class="m-t"> <small>Inspinia we app framework base on Bootstrap 3 &copy; 2014</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/adminpage/js/jquery-3.1.1.min.js"></script>
    <script src="~/adminpage/js/popper.min.js"></script>
    <script src="~/adminpage/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/adminpage/js/plugins/iCheck/icheck.min.js"></script>
    <script>$(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });</script>
</body>

</html>
